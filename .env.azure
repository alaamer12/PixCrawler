# =============================================================================
# AZURE DEPLOYMENT CONFIGURATION
# =============================================================================
# Configuration for deploy-azure.py script
# Copy this file and update with your Azure subscription details

# Azure Subscription (REQUIRED - Get from Azure Portal)
AZURE_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000

# Resource Configuration
RESOURCE_GROUP=pixcrawler-rg
LOCATION=eastus

# App Service Configuration
BACKEND_APP_NAME=pixcrawler-backend
FRONTEND_APP_NAME=pixcrawler-frontend
APP_SERVICE_SKU=B1

# Storage Configuration
STORAGE_ACCOUNT_NAME=pixcrawlerstorage
STORAGE_CONTAINER_NAME=datasets
ENABLE_DATA_LAKE=true

# Blob Storage Configuration
AZURE_BLOB_CONTAINER_NAME=pixcrawler-datasets
AZURE_BLOB_DEFAULT_TIER=hot

# Deployment Options
DEPLOY_BACKEND=true
DEPLOY_FRONTEND=true
ENVIRONMENT=production

# GitHub Configuration (Optional - for CI/CD)
# GITHUB_REPO_URL=https://github.com/yourusername/pixcrawler
# GITHUB_BRANCH=main

# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# These will be configured in Azure Portal after deployment

# Application Settings
# ENVIRONMENT=production
# DEBUG=false
# PIXCRAWLER_ENVIRONMENT=production

# Storage Provider
# STORAGE_PROVIDER=azure

# Azure Blob Storage (will be auto-configured)
# AZURE_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_BLOB_ACCOUNT_NAME=pixcrawlerstorage
# AZURE_BLOB_CONTAINER_NAME=pixcrawler-datasets

# Supabase (REQUIRED - from Supabase Dashboard)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# DATABASE_URL=postgresql+asyncpg://postgres:password@db.your-project.supabase.co:5432/postgres

# Redis (Local or Azure Redis Cache)
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2