# Environment Configuration
ENVIRONMENT=development
DEBUG=true
HOST= # Empty For development
PORT=8000
LOG_LEVEL=INFO

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@db.your-project.supabase.co:5432/postgres
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_EXPIRE_SECONDS=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Storage
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp

# Storage Provider Configuration
STORAGE_PROVIDER=local  # Options: local, azure
STORAGE_LOCAL_STORAGE_PATH=./storage

# Azure Blob Storage (if using azure provider)
STORAGE_AZURE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net
STORAGE_AZURE_CONTAINER_NAME=pixcrawler-storage
STORAGE_AZURE_MAX_RETRIES=3

# Azure Archive Tier Settings (Cost Optimization)
STORAGE_AZURE_ENABLE_ARCHIVE_TIER=true
STORAGE_AZURE_DEFAULT_TIER=hot  # Options: hot, cool, archive
STORAGE_AZURE_REHYDRATE_PRIORITY=standard  # Options: standard, high

# Lifecycle Management (Automated Tier Transitions)
STORAGE_AZURE_LIFECYCLE_ENABLED=false
STORAGE_AZURE_LIFECYCLE_COOL_AFTER_DAYS=30
STORAGE_AZURE_LIFECYCLE_ARCHIVE_AFTER_DAYS=90
STORAGE_AZURE_LIFECYCLE_DELETE_AFTER_DAYS=2555

# Temporary Storage Cleanup Configuration
TEMP_STORAGE_CLEANUP_TEMP_STORAGE_PATH=./temp_storage
TEMP_STORAGE_CLEANUP_EMERGENCY_CLEANUP_THRESHOLD=95.0
TEMP_STORAGE_CLEANUP_WARNING_THRESHOLD=85.0
TEMP_STORAGE_CLEANUP_CLEANUP_BATCH_SIZE=1000
TEMP_STORAGE_CLEANUP_MAX_ORPHAN_AGE_HOURS=24
TEMP_STORAGE_CLEANUP_SCHEDULED_CLEANUP_INTERVAL_MINUTES=60
TEMP_STORAGE_CLEANUP_EMERGENCY_CHECK_INTERVAL_MINUTES=5
TEMP_STORAGE_CLEANUP_CLEANUP_FAILED_JOBS_AFTER_HOURS=1
TEMP_STORAGE_CLEANUP_ENABLE_STORAGE_MONITORING=true
TEMP_STORAGE_CLEANUP_LOG_CLEANUP_STATS=true
TEMP_STORAGE_CLEANUP_MIN_FREE_SPACE_GB=1.0
TEMP_STORAGE_CLEANUP_MAX_FILES_PER_CLEANUP=10000
