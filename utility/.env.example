# ============================================================================
# PixCrawler Utility Package Configuration
# ============================================================================
# This is the global configuration file for all utility sub-packages.
# Each section corresponds to a specific utility module.
# ============================================================================

# ----------------------------------------------------------------------------
# Compression Settings (compress module)
# ----------------------------------------------------------------------------
INPUT_DIR=./images
OUTPUT_DIR=./compressed
FORMAT=webp
QUALITY=85
LOSSLESS=false
WORKERS=0

# Archive Settings (nested under compress)
ARCHIVE_ENABLE=true
ARCHIVE_TAR=true
ARCHIVE_TYPE=zstd
ARCHIVE_LEVEL=10
ARCHIVE_OUTPUT=./dataset.zst

# ----------------------------------------------------------------------------
# Logging Settings (logging_config module)
# ----------------------------------------------------------------------------
PIXCRAWLER_ENVIRONMENT=development
PIXCRAWLER_LOG_DIR=./logs
PIXCRAWLER_LOG_JSON=false
PIXCRAWLER_LOG_COLORS=true
PIXCRAWLER_LOG_LEVEL=DEBUG
PIXCRAWLER_CONSOLE_LEVEL=DEBUG
PIXCRAWLER_FILE_LEVEL=DEBUG
